<div class="container">
  <h1>
    Invite User to <%= @org.name %>
  </h1>

  <p>Enter the email address of the user you would like to invite to <%= @org.name %>.</p>
  <p><strong>Invites expire in 48 hours.</strong></p>

  <%= form_for @changeset, org_path(@conn, :send_invite), fn f -> %>
    <div class="form-group">
      <label for="name_input">Name</label>
      <%= text_input f, :name, class: "form-control", id: "name_input" %>
      <div class="has-error"><%= error_tag f, :name %></div>
    </div>

    <div class="form-group">
      <label for="email_input">Email</label>
      <%= email_input f, :email, class: "form-control", id: "email_input" %>
      <div class="has-error"><%= error_tag f, :email %></div>
    </div>

    <%= submit "Send Invite", class: "btn btn-success" %>
    <a class="btn btn-secondary" href="<%= org_path(@conn, :edit) %>">Cancel</a>
  <% end %>
</div>
