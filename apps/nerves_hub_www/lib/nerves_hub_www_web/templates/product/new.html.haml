.modal-content
  = form_for @changeset, product_path(@conn, :create), fn f ->
    .modal-header.panel-title.text-left
      New Product

    .modal-body{style: "padding-top: 0px;"}
      = render(NervesHubWWWWeb.SharedView, "show_flash.html", conn: @conn)
      .form-group.text-left
        %label{for: "name_input"}
          Name
        = text_input f, :name, class: "form-control", id: "email_input"
        = error_tag f, :name

    .modal-footer
      .pull-right
        = submit "Create", class: "btn btn-primary"

    <% end %>
