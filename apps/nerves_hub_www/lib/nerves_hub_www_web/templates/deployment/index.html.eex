
<div class="row">
  <div class="w-100 shadow nhw_list">
    <div class="header">
      <div class="row">
        <div class="col-8">
          Deployments for <strong><%= @product.name %></strong>
        </div>
        <div class="col-4 text-right">
          <a href="<%= deployment_path(@conn, :new, @org.name, @product.name)%>">
            <span class="fa fa-plus-circle">
          </a>
        </div>
      </div>
    </div>
    <div class="card">
    <table id="deployment_listing" class="table">
      <thead>
        <tr class="d-flex">
          <th class="col-3">Name</th>
          <th class="col-2">Firmware</th>
          <th class="col-4">Conditions</th>
          <th class="col-2">Status</th>
          <th class="col-1"></th>
        </tr>
      </thead>
      <%= for deployment <- @deployments do %>
        <tr class="item d-flex">
          <td class="col-3"><span><%= deployment.name %></span></td>
          <td class="col-2"><span><%= firmware_display_name(deployment.firmware) %></span></td>
          <td class="col-4"><span class="pre-scrollable"><%= deployment.conditions |> Jason.encode!() %></pre></td>
          <td class="col-2">
            <span class="label label-<%= if deployment.is_active, do: "success", else: "default" %>">
              <%= if deployment.is_active, do: "Active", else: "Inactive" %>
            </span>
          </td>
          <td class="col-1"><a class="btn btn-sm btn-secondary" href="<%= deployment_path(@conn, :show, @org.name, @product.name, deployment.name) %>">Details</a></td>
        </tr>
      <% end %>
    </table>
    </div>
  </div>
</div>
